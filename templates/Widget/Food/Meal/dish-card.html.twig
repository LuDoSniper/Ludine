<div class="card" style="background-color: #3F3F47;">
    <input type="hidden" name="url" value="{{ update_path }}">
    <div class="group" style="max-width: 100% !important;">
        <div style="display: flex; flex-direction: column; align-items: center; justify-content: flex-start; gap: var(--medium)">
            <div class="field">
                <span class="h1">{{ name }}</span>
            </div>
            <div class="field">
                <span class="text-muted">{{ preparation_time }}min</span>
            </div>
            <div class="field tags">
                {% for tag in tags %}
                    <div class="tag" style="background-color: {{ tag.color }}">{{ tag.name }}</div>
                {% endfor %}
            </div>
        </div>
    </div>
</div>