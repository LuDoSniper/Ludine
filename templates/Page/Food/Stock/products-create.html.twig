{% set sidebar_active = 'food' %}
{% extends 'Layout/base-modules.html.twig' %}

{% block title %}
    Ludine - Create product
{% endblock %}

{% block customstylesheets %}
    <link rel="stylesheet" href="{{ asset('css/Food/Stock/products-create.css') }}">
{% endblock %}

{% block main %}
    {% include 'Widget/module-header.html.twig' with {
        header: {
            h1: 'Nourriture',
            h2: {
                'Repas': {
                    selected: false,
                    url: '#'
                },
                'Stock': {
                    selected: true,
                    url: path('food_stock_containers')
                }
            },
            h3: {
                'Conteneurs': {
                    selected: false,
                    url: path('food_stock_containers')
                },
                'Produits': {
                    selected: true,
                    url: path('food_stock_products')
                },
                'Produits stock√©s': {
                    selected: false,
                    url: path('food_stock_stocked_products')
                }
            }
        }
    } %}

    <div id="content" class="form">
        <meta data-context='{"id": {{ id == 'new' ? '"' : '' }}{{ id }}{{ id == 'new' ? '"' : '' }}, "url": "{{ path('food_stock_products_get', {'id': id}) }}"}'>

        <div id="content-header">
            <div class="group">
                {% include 'Widget/button.html.twig' with {
                    'btn': {
                        'name': 'Nouveau',
                        'url': path('food_stock_products_create'),
                        'type': 'primary'
                    }
                } %}

                <a href="" id="save"><img src="{{ asset('img/svg/save.svg') }}"></a>
            </div>
        </div>

        {{ form_start(form) }}
            <input type="hidden" name="id" value="new">
            <div class="group">
                <div class="field">
                    {{ form_label(form.name) }}
                    {{ form_widget(form.name) }}
                </div>
                <div class="field">
                    {{ form_label(form.description) }}
                    {{ form_widget(form.description) }}
                </div>
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}

{% block customjavascripts %}
    <script src="{{ asset('js/Food/Stock/products-create.js') }}"></script>
{% endblock %}