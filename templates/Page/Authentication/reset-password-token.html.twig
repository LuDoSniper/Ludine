{% extends 'Layout/Authentication/authentication.html.twig' %}

{% block title %}
    Reset Password
{% endblock %}

{% block form %}
    {{ form_start(form) }}
    {{ form_widget(form.password.first) }}
    {{ form_widget(form.password.second) }}
    <button class="button">Réinitialiser le mot de passe</button>
    <div class="spacer"></div>
    <div class="spacer"></div>
    <a href="{{ path('app_login') }}">Déjà un compte ?</a>
    <a href="{{ path('app_register') }}">Pas encore de compte ?</a>
    {{ form_end(form) }}
{% endblock %}